generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogSummary {
  id          String   @id @default(cuid())
  originalUrl String   @unique
  title       String?
  summary     String
  urduSummary String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Reference to full content in MongoDB
  mongoId     String?
  
  // Additional metadata
  wordCount   Int      @default(0)
  language    String   @default("en")
  tags        String[] @default([])
  author      String?
  publishedDate DateTime?
  
  // User who created the summary (if applicable)
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@map("blog_summaries")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // User's summaries
  summaries BlogSummary[]
  
  @@map("users")
}
